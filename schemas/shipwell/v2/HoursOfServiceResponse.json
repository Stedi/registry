{
  "properties": {
    "driver_id": {
      "type": "string"
    },
    "hos": {
      "description": "Hours of Service Record",
      "properties": {
        "break": {
          "description": "Number of minutes spent on break i.e. Off duty or in the sleeper berth (minutes)",
          "type": "number"
        },
        "cycle": {
          "description": "On Duty and Driving Time available in this cycle (minutes)",
          "type": "number"
        },
        "drive": {
          "description": "Driving time available in this shift (minutes)",
          "type": "number"
        },
        "shift": {
          "description": "On Duty time available in this shift (minutes)",
          "type": "number"
        }
      },
      "required": ["cycle", "shift", "drive", "break"],
      "type": "object"
    },
    "status": {
      "enum": ["driving", "off_duty_not_driving", "off_duty", "sleeper"],
      "type": "string"
    }
  },
  "type": "object",
  "default": {
    "driver_id": "string",
    "hos": {
      "break": 0,
      "cycle": 0,
      "drive": 0,
      "shift": 0
    },
    "status": "driving"
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}
